{
  "module_id": "sensors",
  "description": "Sensory system - temperature, illuminance, pressure, motion",
  "mqtt_topics": ["voicehome/sensors", "voicehome/sensors/command" ,"voicehome/sensors/temperature","voicehome/sensors/pressure","voicehome/sensors/illuminance","voicehome/sensors/humidity"],
  "websocket_passports": ["sensors"],
  "moves": [
    {
      "move_id": "sensors_01.get_current_temperature",
      "method_name": "get_current_temperature",
      "description": "Sends a command via MQTT to measure current temperature",
      "calls": [
        ["kolik","je","stupňů"],
        ["jaká","je","teplota"],
        ["změř", "teplotu"]
      ]
    },
    {
      "move_id": "sensors_02.get_current_pressure",
      "method_name": "get_current_pressure",
      "description": "Sends a command via MQTT to measure current pressure",
      "calls": [
        ["kolik","je","tlak"],
        ["jaký","je","tlak"],
        ["změř","tlak"]
      ]


    },
    {
      "move_id": "sensors_03.get_current_humidity",
      "method_name": "get_current_humidity",
      "description": "Sends a command via MQTT to measure current humidity",
      "calls": [
        ["kolik","je","vlhkost"],
        ["jaká","je","vlhkost"],
        ["změř", "vlhkost"]
      ]


    },
    {
      "move_id": "sensors_04.get_current_illuminance",
      "method_name": "get_current_illuminance",
      "description": "Sends a command via MQTT to measure current illuminance",
      "calls": [
        ["kolik","je","intenzity","světla"],
        ["jaká","je","intenzita","světla"],
        ["změř", "světlo"]
      ]


    },
    {
      "move_id": "sensors_05.get_average_temperature_for_last_day",
      "method_name": "get_average_temperature_for_last_day",
      "description": "Voicekit answer average temperature for the last day",
      "calls": [
        ["průměrná","teplota","za","poslední","den"],
        ["dnešní","průměrná","teplota"]
      ]
    },
    {
      "move_id": "sensors_06.get_average_pressure_for_last_day",
      "method_name": "get_average_pressure_for_last_day",
      "description": "Voicekit answer average pressure for the last day",
      "calls": [
        ["průměrný","tlak","za","poslední","den"],
        ["dnešní","průměrný","tlak"]
      ]
    },
    {
      "move_id": "sensors_07.get_average_humidity_for_last_day",
      "method_name": "get_average_humidity_for_last_day",
      "description": "Voicekit answer average humidity for the last day",
      "calls": [
        ["průměrná","vlhkost","za","poslední","den"],
        ["dnešní","průměrná","vlhkost"]
      ]
    },
    {
      "move_id": "sensors_08.get_average_illuminance_for_last_day",
      "method_name": "get_average_illuminance_for_last_day",
      "description": "Voicekit answer average illuminance for the last day",
      "calls": [
        ["průměrná","intenzita","světelnosti","za","poslední","den"],
        ["dnešní","průměrná","intenzita","světelnosti"]
      ]
    },
    {
      "move_id": "sensors_09.get_average_temperature_for_last_week",
      "method_name": "get_average_temperature_for_last_week",
      "description": "Voicekit answer average temperature for the last week",
      "calls": [
        ["průměrná","teplota","za","poslední","týden"],
        ["týdenní","průměrná","teplota"]
      ]
    },
    {
      "move_id": "sensors_10.get_average_pressure_for_last_week",
      "method_name": "get_average_pressure_for_last_week",
      "description": "Voicekit answer average pressure for the last week",
      "calls": [
        ["průměrný","tlak","za","poslední","týden"],
        ["týdenní","průměrný","tlak"]
      ]
    },
    {
      "move_id": "sensors_11.get_average_humidity_for_last_week",
      "method_name": "get_average_humidity_for_last_week",
      "description": "Voicekit answer average humidity for the last week",
      "calls": [
        ["průměrná","vlhkost","za","poslední","týden"],
        ["týdenní","průměrná","vlhkost"]
      ]
    },
    {
      "move_id": "sensors_12.get_average_illuminance_for_last_week",
      "method_name": "get_average_illuminance_for_last_week",
      "description": "Voicekit answer average illuminance for the last week",
      "calls": [
        ["průměrná","intenzita","světelnosti","za","poslední","týden"],
        ["týdenní","průměrná","intenzita","světelnosti"]
      ]
    }
  ]
}
