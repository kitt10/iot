{
	"module_id": "lights",
	"description": "Lightning system - one onboard LED on ESP8266 for now.",
	"mqtt_topics": ["voicehome/lights/led","voicehome/lights/state/receive"],
	"websocket_passports": ["lights","lights/state"],
	"moves": [
		{
			"move_id": "lights_01.turn_on_ESP_onboard_led",
			"method_name": "turn_on_ESP_onboard_led",
			"description": "Turn on the onboard LED.",
			"calls": [
				["rozsviť","všechny","vývojové","desky"],
				["rozsviť","všechny","vestavěné","ledky"]
			]
		},
		{
			"move_id": "lights_02.turn_off_ESP_onboard_led",
			"method_name": "turn_off_ESP_onboard_led",
			"description": "Turn off the onboard LED.",
			"calls": [
				["zhasni","všechny","vývojové","desky"],
				["zhasni","všechny","vestavěné","ledky"]
			]
		},
		{
			"move_id": "lights_03.ESP_turn_on_light_1",
			"method_name": "ESP_turn_on_light_1",
			"description": "Turning on light 1",
			"calls": [
				["zapni","obýváku", "světlo"],
				["rozsviť","obýváku", "světlo"],
				["zapni","obývacím","pokoji", "světlo"],
				["rozsviť","obývacím","pokoji", "světlo"]
			]
		},
		{
			"move_id": "lights_04.ESP_turn_off_light_1",
			"method_name": "ESP_turn_off_light_1",
			"description": "Turning off light 1",
			"calls": [
				["vypni","obýváku", "světlo"],
				["zhasni","obýváku", "světlo"],
				["vypni","obývacím","pokoji", "světlo"],
				["zhasni","obývacím","pokoji", "světlo"]
			]
		},
		{
			"move_id": "lights_05.ESP_turn_on_light_onboard_1",
			"method_name": "ESP_turn_on_light_onboard_1",
			"description": "Turn on the onboard LED.",
			"calls": [
				["rozsviť","ledku","desky","číslo","jedna"],
				["rozsviť","vývojovou","desku","jedna"]
			]
		},
		{
			"move_id": "lights_06.ESP_turn_off_light_onboard_1",
			"method_name": "ESP_turn_off_light_onboard_1",
			"description": "Turn off the onboard LED.",
			"calls": [
				["zhasni","ledku","desky","číslo","jedna"],
				["zhasni","vývojovou","desku","jedna"]
			]
		},
		{
			"move_id": "lights_07.ESP_turn_on_light_onboard_2",
			"method_name": "ESP_turn_on_light_onboard_2",
			"description": "Turn on the onboard LED.",
			"calls": [
				["rozsviť","ledku","desky","číslo","dva"],
				["rozsviť","vývojovou","desku","dva"]
			]
		},
		{
			"move_id": "lights_08.ESP_turn_off_light_onboard_2",
			"method_name": "ESP_turn_off_light_onboard_2",
			"description": "Turn off the onboard LED.",
			"calls": [
				["zhasni","ledku","desky","číslo","dva"],
				["zhasni","vývojovou","desku","dva"]
			]
		},
		{
			"move_id": "lights_09.ESP_turn_on_light_onboard_3",
			"method_name": "ESP_turn_on_light_onboard_3",
			"description": "Turn on the onboard LED.",
			"calls": [
				["rozsviť","ledku","desky","číslo","tři"],
				["rozsviť","vývojovou","desku","tři"]
			]
		},
		{
			"move_id": "lights_10.ESP_turn_off_light_onboard_3",
			"method_name": "ESP_turn_off_light_onboard_3",
			"description": "Turn off the onboard LED.",
			"calls": [
				["zhasni","ledku","desky","číslo","tři"],
				["zhasni","vývojovou","desku","tři"]
			]
		},
		{
			"move_id": "lights_11.which_lights_on",
			"method_name": "which_lights_on",
			"description": "Voicekit answer which lights are turned on",
			"calls": [
				["která","světla","svítí"]
			]
		}
	]
}
