{
	"module_id": "lights",
	"description": "Lightning system - one onboard LED on ESP8266 for now.",
	"mqtt_topics": ["voicehome/lights/led"],
	"websocket_passports": ["lights"],
	"moves": [
		{
			"move_id": "lights_01.turn_on_ESP_onboard_led",
			"method_name": "turn_on_ESP_onboard_led",
			"description": "Turn on the onboard LED.",
			"calls": [
				["zapni", "vestavěnou", "ledku"],
				["rozsviť", "ledku"],
				["led", "on"]
			]
		},
		{
			"move_id": "lights_02.turn_off_ESP_onboard_led",
			"method_name": "turn_off_ESP_onboard_led",
			"description": "Turn off the onboard LED.",
			"calls": [
				["zhasni", "vestavěnou", "ledku"],
				["zhasni", "ledku"],
				["vypni", "ledku"],
				["led", "off"]
			]
		},
		{
			"move_id": "lights_03.ESP_turn_on_light_1",
			"method_name": "ESP_turn_on_light_1",
			"description": "Turning on light 1",
			"calls": [
				["zapni","obýváku", "světlo"],
				["rozsviť","obýváku", "světlo"],
				["light 1", "on"]
			]
		},
		{
			"move_id": "lights_04.ESP_turn_off_light_1",
			"method_name": "ESP_turn_off_light_1",
			"description": "Turning off light 1",
			"calls": [
				["vypni","obýváku", "světlo"],
				["zhasni","obýváku", "světlo"],
				["light 1", "off"]
			]
		},
		{
			"move_id": "lights_05.ESP_turn_on_light_onboard_1",
			"method_name": "ESP_turn_on_light_onboard_1",
			"description": "Turn on the onboard LED.",
			"calls": [
				["zapni", "vestavěnou", "ledku","ESP 1"],
				["rozsviť", "ledku","ESP 1"],
				["led", "on","ESP 1"]
			]
		},
		{
			"move_id": "lights_06.ESP_turn_off_light_onboard_1",
			"method_name": "ESP_turn_off_light_onboard_1",
			"description": "Turn off the onboard LED.",
